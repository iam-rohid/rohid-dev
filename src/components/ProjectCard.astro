---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

type Props = {
  data: CollectionEntry<"projects">;
};

const { data } = Astro.props;
const { Content } = await data.render();
---

<article
  class="flex gap-4 md:gap-8 lg:gap-16 items-start max-md:flex-col-reverse"
>
  <div class="flex-1 md:sticky top-8">
    <h3 class="text-2xl font-bold">{data.data.title}</h3>
    <article class="prose dark:prose-invert prose-zinc max-w-none">
      <Content />
    </article>
  </div>
  <Image
    src={data.data.coverImage}
    alt={data.data.title}
    width={512}
    height={320}
    class="object-cover aspect-video rounded-lg w-full md:w-72 lg:w-96 md:sticky top-8"
  />
</article>
