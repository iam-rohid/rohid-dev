---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

type Props = {
  data: CollectionEntry<"projects">;
};

const {
  data: {
    data: { title, coverImage },
    slug,
  },
} = Astro.props;
---

<article
  class="grid md:grid-cols-2 border border-zinc-200 dark:border-zinc-800"
>
  <Image
    src={coverImage}
    alt={title}
    width={512}
    height={512}
    class="flex-1 aspect-video object-cover w-full"
  />
  <div class="flex-1">
    <h3 class="text-2xl font-bold">{title}</h3>
  </div>
</article>
