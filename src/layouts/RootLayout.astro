---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";

type Props = {
  title?: string | undefined;
  description?: string;
  keywords?: string[] | undefined;
};

const {
  title = "Rohid",
  description = "Hey, I'm Rohid. I'm a programmer, designer and solopreneur",
  keywords = [],
} = Astro.props;
---

<html lang="en" class="overflow-y-scroll">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords.join(",")} />
    <!-- Plausible Script -->
    <script
      defer
      data-domain="rohid.dev"
      src="https://plausible.io/js/script.js"></script>
    <!-- SupaBot AI -->
    <script
      async
      src="https://supabotai.com/api/widget/js?id=clm29uwbn0001l20883uegbig"
    ></script>
  </head>
  <body
    class="flex min-h-screen flex-col bg-white text-zinc-950 dark:bg-zinc-950 dark:text-zinc-50"
  >
    <Header />
    <div class="flex-1">
      <slot />
    </div>
    <Footer />
    <style is:global>
      @media (prefers-color-scheme: dark) {
        html {
          color-scheme: dark;
        }
      }
    </style>
  </body>
</html>
